<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"

     tools:context=".View.SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.example.misdaqia.Helper.HeaderFontTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:text="Misdaqia"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold" />


        <com.example.misdaqia.Helper.MainFontEdittext
            android:id="@+id/etemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="الاسم"
            android:paddingLeft="25dp"
            android:paddingTop="9dp"
            android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
            android:paddingRight="25dp"
            android:paddingBottom="9dp"
            android:background="@drawable/back_edit"

            android:textColor="#000"
             android:textSize="15dp" />


        <com.example.misdaqia.Helper.MainFontEdittext
            android:id="@+id/etpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="الرقم السري"
            android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
            android:background="@drawable/back_edit"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"

            android:layout_marginTop="20dp"

            android:textColor="#000"
             android:textSize="15dp" />


        <com.example.misdaqia.Helper.MainFontButton
            android:id="@+id/login"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_orange"
            android:text="تسجيل الدخول"
            android:textColor="#fff"
            android:textSize="12dp"
             />



        <com.example.misdaqia.Helper.MainFontTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="انشاء حساب جديد ؟"
            android:textColor="#fff"
            android:textSize="16dp"
            android:onClick="goSignup"
            android:textStyle="bold" />

    </LinearLayout>




</ScrollView>
